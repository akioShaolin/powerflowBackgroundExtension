{
  "manifest_version": 3,
  "name": "PowerFlow Background Changer",
  "version": "1.0",
  "description": "Altere o plano de fundo do PowerFlow com imagens personalizadas",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://powerflow.ecopower.com.br/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PowerFlow Background Changer"
  },
  "content_scripts": [
    {
      "matches": ["https://powerflow.ecopower.com.br/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

